+ *    (See accompanying file LICENSE or copy at
+ *          http://www.boost.org/LICENSE_1_0.txt)
+ */
+module core.sys.posix.libgen;
+
+@nogc nothrow:
+extern (C):
+version (Posix):
+
+char* basename(char*);
+char* dirname(char*);
