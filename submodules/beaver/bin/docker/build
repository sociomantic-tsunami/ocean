# Look for a suitable image name
img="${BEAVER_DOCKER_Iimg-$(git config hub.upstream)}"
img="${img:-${TRAVIS_REPO_SLUG:-beaver}}"

# Build the docker image
set -xe
docker build --pull -t "$img" "$@"
